@model Tuple<List<WeatherData>, WeatherForecast>

<form method="post" action="/Weather/Index">
    <label for="city">Wprowadź nazwę miasta:</label><br>
    <input type="text" id="city" name="city" required><br>
    <input type="submit" value="Sprawdź pogodę">
</form>

@if (Model.Item2 != null && !String.IsNullOrEmpty(Model.Item2.City))
{
    <div>
        <h2>Pogoda dla: @Model.Item2.City</h2>
        <p>Temperatura: @Model.Item2.Temperature</p>
        <p>Opis: @Model.Item2.Description</p>
    </div>
}

@if (Model.Item1 != null && Model.Item1.Any())
{
    <table>
        <thead>
            <tr>
                <th>Miasto</th>
                <th>Temperatura</th>
                <th>Opis</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model.Item1)
            {
                <tr>
                    <td>@data.City</td>
                    <td>@data.Temperature</td>
                    <td>@data.Description</td>
                </tr>
            }
        </tbody>
    </table>
}
